{
  "id": "urn:myrels",
  "relations": {
    "customerIdKey": {
      "key": {
        "selector": "$.customers[:]",
        "field": "$.id"
      }
    },
    "uniqueCustomerFriendlyName": {
      "unique": {
        "selector": "$.customers[:]",
        "field": "$.friendly_name"
      }
    },
    "productIdKey": {
      "key": {
        "selector": "$.products[:]",
        "field": "$.id"
      }
    },
    "orderToCustomerId": {
      "keyRef": {
        "refer": "customerIdKey",
        "selector": "$.orders[:]",
        "field": "$.customer"
      }
    },
    "orderToProductId": {
      "keyRef": {
        "refer": "productIdKey",
        "selector": "$.orders[:]",
        "field": "$.product"
      }
    }
  }
}